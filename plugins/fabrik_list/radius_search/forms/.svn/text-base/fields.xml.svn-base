<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="params" addfieldpath="/administrator/components/com_fabrik/models/fields">
		<fieldset name="plg-list-radius_search">
			<field name="radius_mapelement" 
				type="listfields" 
				filter="fabrikgooglemap"
				repeat="true"
				label="PLG_LIST_RADIUS_SEARCH_MAP_ELEMENT_LABEL" 
				description="PLG_LIST_RADIUS_SEARCH_MAP_ELEMENT_DESC" />
				
			<field name="radius_unit" 
				default="km" 
				type="list"
				repeat="true"
				label="PLG_LIST_RADIUS_SEARCH_RADIUS_UNIT_LABEL">
					<option value="km">Kms</option>
					<option value="miles">Miles</option>
			</field>
			
			<field name="radius_max" 
				default="100" 
				type="text" 
				size="4"
				repeat="true"
				label="PLG_LIST_RADIUS_SEARCH_MAX_LABEL" />
				
			<field name="radius_label" 
				default="Radius search" 
				type="text"
				repeat="true"
				label="PLG_LIST_RADIUS_SEARCH_SEARCH_LABEL_LABEL" />
				
			<field name="radius_placeelement" 
				type="listfields"
				repeat="true"
				label="PLG_LIST_RADIUS_SEARCH_PLACE_ELEMENT_LABEL" 
				description="PLG_LIST_RADIUS_SEARCH_PLACE_ELEMENT_DESC" />

		</fieldset>
	</fields>
</form>