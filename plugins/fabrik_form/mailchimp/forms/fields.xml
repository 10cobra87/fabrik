<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<form>
	<fields addfieldpath="/administrator/components/com_fabrik/models/fields" name="params">
		<fieldset name="plg-form-mailchimp">
			<field name="mailchimp_apikey"
				type="text"
				description="PLG_FORM_MAILCHIMP_API_KEY_DESC"
				label="PLG_FORM_MAILCHIMP_API_KEY_LABEL"
				repeat="true"
				size="40" />
			
			<field name="mailchimp_listid"
				type="text"
				description="PLG_FORM_MAILCHIMP_LIST_ID_DESC"
				label="PLG_FORM_MAILCHIMP_LIST_ID_LABEL"
				repeat="true"
				size="30" />
			
			<field name="mailchimp_userconfirm"
				type="radio"
				default="1"
				description="PLG_FORM_MAILCHIMP_USER_CONFIRM_DESC"
				label="PLG_FORM_MAILCHIMP_USER_CONFIRM_LABEL"
				repeat="true">
					<option value="0">JNO</option>
					<option value="1">JYES</option>	
			</field>
		
			<field name="mailchimp_email"
				type="listfields"
				description="PLG_FORM_MAILCHIMP_EMAIL_DESC"
				label="PLG_FORM_MAILCHIMP_EMAIL_LABEL"
				repeat="true" />
				
			<field name="mailchimp_firstname"
				type="listfields"
				description="PLG_FORM_MAILCHIMP_FIRST_NAME_DESC"
				label="PLG_FORM_MAILCHIMP_FIRST_NAME_LABEL"
				repeat="true"/>
			
			<field name="mailchimp_lastname"
				type="listfields"
				description="PLG_FORM_MAILCHIMP_LAST_NAME_DESC"
				label="PLG_FORM_MAILCHIMP_LAST_NAME_LABEL"
				repeat="true" />
				
			<field name="mailchimp_signuplabel"
				type="text"
				default="Sign up to my mailing list"
				description="PLG_FORM_MAILCHIMP_SIGNUP_LABEL_DESC"
				label="PLG_FORM_MAILCHIMP_SIGNUP_LABEL_LABEL"
				repeat="true"
				size="30"/>
		
			<field name="mailchimp_update_existing"
				type="radio"
				default="0"
				description="PLG_FORM_MAILCHIMP_UPDATE_EXISTING_DESC"
				label="PLG_FORM_MAILCHIMP_UPDATE_EXISTING_LABEL"
				repeat="true">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="mailchimp_email_type"
				type="radio"
				default="html"
				description="PLG_FORM_MAILCHIMP_EMAIL_TYPE_DESC"
				label="PLG_FORM_MAILCHIMP_EMAIL_TYPE_LABEL"
				repeat="true">
					<option value="text">text</option>
					<option value="html">html</option>
			</field>
			
			
			<field name="mailchimp_double_optin"
				type="radio"
				repeat="true"
				default="1"
				description="PLG_FORM_MAILCHIMP_DOUBLE_OPTIN_DESC"
				label="PLG_FORM_MAILCHIMP_DOUBLE_OPTIN_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="mailchimp_groupopts"
				type="textarea"
				cols="40"
				description="PLG_FORM_MAILCHIMP_GROUP_OPTS_DESC"
				label="PLG_FORM_MAILCHIMP_GROUP_OPTS_LABEL"
				repeat="true" rows="6"/>
				
		</fieldset>
	</fields>
</form>
