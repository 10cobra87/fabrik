<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="params">
		<fieldset name="plg-form-logs">
			<field name="logs_record_in_db" 
				type="radio" 
				repeat="true"
				default="0" 
				label="PLG_FORM_LOG_LOGSRECORDINDB_LABEL" 
				description="PLG_FORM_LOG_LOGSRECORDINDB_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
				
			<field name="record_in" 
				type="text"
				size="30" 
				repeat="true"
				label="PLG_FORM_LOG_RECORDIN_LABEL" 
				description="PLG_FORM_LOG_RECORDIN_DESC"/>
				
			<field name="logs_date_now" 
				type="text" 
				size="30" 
				repeat="true"
				default="Y-m-d H:i:s" 
				label="PLG_FORM_LOG_LOGSDATENOW_LABEL" 
				description="PLG_FORM_LOG_LOGSDATENOW_DESC"/>
				
			<field name="logs_record_ip" 
				type="radio" 
				default="0" 
				repeat="true"
				label="PLG_FORM_LOG_LOGSRECORDIP_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
				</field>
			
			<field name="logs_record_referer" 	
				type="radio" 
				default="0" 
				repeat="true"
				label="PLG_FORM_LOG_LOGSRECORDREFERER_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="logs_record_useragent" 
				type="radio" 
				repeat="true"
				default="0" 
				label="PLG_FORM_LOG_LOGSRECORDUSERAGENT_LABEL">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
	
			<field name="custom_msg" 
				type="textarea" 
				rows="6" 
				repeat="true"
				cols="40" 
				default="" 
				label="PLG_FORM_LOG_ORCUSTOM_LABEL" 
				description="PLG_FORM_LOG_ORCUSTOM_DESC"/>
				
			<field name="compare_data" 
				type="radio" 
				repeat="true"
				default="0" 
				label="PLG_FORM_LOG_COMPAREDATA_LABEL" 
				description="PLG_FORM_LOG_COMPAREDATA_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="make_file" 
				type="radio" 
				default="0" 
				repeat="true"
				label="PLG_FORM_LOG_MAKEFILE_LABEL" 
				description="PLG_FORM_LOG_MAKEFILE_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="logs_path" 
				type="text" 
				size="30" 
				repeat="true"
				default="logs/" 
				label="PLG_FORM_LOG_LOGSPATH_LABEL" 
				description="PLG_FORM_LOG_LOGSPATH_DESC"/>
				
			<field name="logs_file" 
				type="text" 
				size="30" 
				repeat="true"
				default="mylogs" 
				label="PLG_FORM_LOG_LOGSFILE_LABEL" 
				description="PLG_FORM_LOG_LOGSFILE_DESC"/>
				
			<field name="logs_random_filename" 
				type="radio" 
				default="0" 
				repeat="true"
				label="PLG_FORM_LOG_LOGSRANDOMFILENAME_LABEL" 
				description="PLG_FORM_LOG_LOGSRANDOMFILENAME_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="logs_random_filename_length" 
				type="text" 
				size="9" 
				repeat="true"
				default="30" 
				label="PLG_FORM_LOG_LOGSRANDOMFILENAMELENGTH_LABEL" 
				description="PLG_FORM_LOG_LOGSRANDOMFILENAMELENGTH_DESC"/>
				
			<field name="logs_file_format" 
				type="radio" 
				default="htm"
				repeat="true" 
				label="PLG_FORM_LOG_LOGSFILEFORMAT_LABEL" 
				description="PLG_FORM_LOG_LOGSFILEFORMAT_DESC">
					<option value="htm">HTM</option>
					<option value="txt">TXT</option>
					<option value="csv">CSV</option>
			</field>
			
			<field name="logs_separator" 
				type="text" 
				size="30" 
				repeat="true"
				default="-----" 
				label="PLG_FORM_LOG_LOGSSEPARATOR_LABEL" 
				description="PLG_FORM_LOG_LOGSSEPARATOR_DESC"/>
				
			<field name="logs_append_or_overwrite" 
				type="radio" 
				default="a" 
				repeat="true"
				label="PLG_FORM_LOG_LOGSAORW_LABEL" description="PLG_FORM_LOG_LOGSAORW_DESC">
					<option value="a">LOGSAPPEND</option>
					<option value="w">LOGSOVERWRITE</option>
			</field>

			<field name="log_details" 
				type="radio" 
				default="0" 
				repeat="true"
				label="PLG_FORM_LOG_LOGDETAILS_LABEL" 
				description="PLG_FORM_LOG_LOGDETAILS_DESC">
					<option value="0">JNO</option>
					<option value="id">ID</option>
					<option value="username">Username</option>
					<option value="name">Name</option>
			</field>
			
			<field name="log_details_ifvisitor" 
				type="radio" 
				default="0" 
				repeat="true"
				label="PLG_FORM_LOG_LOGDETAILSIFVISITOR_LABEL" 
				description="PLG_FORM_LOG_LOGDETAILSIFVISITOR_DESC">
					<option value="0">JNO</option>
					<option value="1">IP Address</option>
				<option value="2">Generic</option>
			</field>

		</fieldset>
	
	</fields>
</form>
