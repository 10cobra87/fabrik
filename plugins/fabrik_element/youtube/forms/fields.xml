<?xml version="1.0" encoding="UTF-8"?>
<form>
	<fields name="params">
	
		<fieldset name="plg-element-youtube" addfieldpath="/administrator/components/com_fabrik/models/fields">
			
			<field name="width" 
				type="text" size="3"
				default="60"
				label="PLG_ELEMENT_YOUTUBE_WIDTH_LABEL" />
				
			<field name="default"
				type="textarea"
				cols="45"
				rows="6"
				label="PLG_ELEMENT_YOUTUBE_DEFAULT_LABEL" />
				
			<field name="include_related" 
				type="radio" 
				default="1" 
				label="PLG_ELEMENT_YOUTUBE_INCLUDE_RELATED_VIDEOS_LABEL" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="show_border" 
				type="radio" 
				default="0" label="PLG_ELEMENT_YOUTUBE_SHOW_BORDER_LABEL" >
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="enable_delayed_cookies" 
				type="radio" 
				default="0" 
				label="PLG_ELEMENT_YOUTUBE_ENABLE_DELAYED_COOKIES_LABEL" 
				description="PLG_ELEMENT_YOUTUBE_ENABLE_DELAYED_COOKIES_DESC">
					<option value="0">JNO</option>
					<option value="1">JYES</option>
			</field>
			
			<field name="color1" 
				type="text" 
				size="9" 
				default="#333333" 
				label="PLG_ELEMENT_YOUTUBE_COLOR1_LABEL" 
				description="PLG_ELEMENT_YOUTUBE_COLOR1_DESC" />
				
			<field name="color2" 
				type="text"
				size="9" 
				default="#000000" 
				label="PLG_ELEMENT_YOUTUBE_COLOR2_LABEL" 
				description="PLG_ELEMENT_YOUTUBE_COLOR2_DESC" />
				
			<field name="player_size" 
				type="list"
				default="medium" 
				label="PLG_ELEMENT_YOUTUBE_PLAYER_SIZE_LABEL" >
					<option value="small">340x285</option>
					<option value="medium">445x364</option>
					<option value="normal">500x405</option>
					<option value="big">660x525</option>
			</field>
			
			<field name="or_width_player" 
				type="text" 
				size="3" 
				label="PLG_ELEMENT_YOUTUBE_OR_WIDTH_PLAYER_LABEL" 
				description="PLG_ELEMENT_YOUTUBE_OR_WIDTH_PLAYER_DESC" />
				
			<field name="or_height_player" 
				type="text" 
				size="3" 
				label="PLG_ELEMENT_YOUTUBE_OR_HEIGHT_PLAYER_LABEL" 
				description="PLG_ELEMENT_YOUTUBE_OR_HEIGHT_PLAYER_DESC" />
				
			<field name="display_in_table" 
				type="list" 
				default="0" 
				label="PLG_ELEMENT_YOUTUBE_DISPLAY_IN_LIST_LABEL" 
				description="PLG_ELEMENT_YOUTUBE_DISPLAY_IN_LIST_DESC">
					<option value="0">PLG_ELEMENT_YOUTUBE_MINI</option>
					<option value="1">PLG_ELEMENT_YOUTUBE_DISPLAY_LINK</option>
					<option value="2">PLG_ELEMENT_YOUTUBE_NORMAL</option>
			</field>
			
			<field name="display_link" 
				type="list" 
				default="0" 
				label="PLG_ELEMENT_YOUTUBE_DISPLAY_LINK_LABEL" 
				description="PLG_ELEMENT_YOUTUBE_DISPLAY_LINK_DESC">
					<option value="0">PLG_ELEMENT_YOUTUBE_RAW_LINK_TEXT</option>
					<option value="1">PLG_ELEMENT_YOUTUBE_LINKED_TEXT_LINK</option>
					<option value="2">PLG_ELEMENT_YOUTUBE_WATCH_VIDEO_LINK</option>
			</field>
			
			<field name="text_link" 
				type="text" 
				size="12" 
				label="PLG_ELEMENT_YOUTUBE_TEXT_LINK_LABEL" default="Watch Video"  />
				
			<field name="target_link" 
				type="list" 
				default="0" 
				label="PLG_ELEMENT_YOUTUBE_TARGET_LINK_LABEL" 
				description="PLG_ELEMENT_YOUTUBE_TARGET_LINK_DESC">
					<option value="0">PLG_ELEMENT_YOUTUBE_CURRENT_WINDOW</option>
					<option value="1">PLG_ELEMENT_YOUTUBE_NEW_WINDOW</option>
					<option value="2">PLG_ELEMENT_YOUTUBE_LIGHTBOX</option>
			</field>
				
		</fieldset>
	</fields>
</form>