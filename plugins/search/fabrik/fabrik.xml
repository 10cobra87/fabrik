<?xml version="1.0" encoding="utf-8" standalone="no"?>
<extension group="search" method="upgrade" type="plugin" version="2.5">
	<name>plg_fabrik_search</name>
	<author>Rob Claybrun</author>
	<creationDate>October 2013</creationDate>
	<copyright>(C) 2005-2013 fabrikar.com</copyright>
	<license>http://www.gnu.org/licenses/gpl-2.0.html GNU/GPL</license>
	<authorEmail>rob@pollen-8.co.uk</authorEmail>
	<authorUrl>www.fabrikar.com</authorUrl>
	<version>3.0.9</version>
	<description>PLG_FABRIK_SEARCH_DESCRIPTION</description>
	<files>
		<filename plugin="fabrik">fabrik.php</filename>
		<folder>language</folder>
	</files>
	<config>
		<fields name="params">
			<fieldset name="basic">
				
				<field name="search_limit"
					type="text"
					default="50"
					description="Number of Search items to return"
					label="Search Limit"
					size="5" />
					
				<field name="search_section_heading"
					default="Fabrik/record"
					type="text"
					description="Appears in search results, under the title."
					label="Section heading"
					size="15"/>
					
				<field name="include_list_title"
					type="radio"
					class="btn-group"
					default="1"
					label="Include list title in heading">
						<option value="0">JNO</option>
						<option value="1">JYES</option>
				</field>
				
			</fieldset>
		</fields>
	</config>
</extension>
